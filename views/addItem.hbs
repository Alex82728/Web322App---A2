<div class="container mt-4">
    <h2>Add a New Item</h2>
    <form action="/items/add" method="POST" enctype="multipart/form-data">
        <!-- Item Name -->
        <div class="form-group mb-3">
            <label for="name">Item Name</label>
            <input 
                type="text" 
                class="form-control" 
                id="name" 
                name="name" 
                placeholder="Enter the item name" 
                value="{{name}}" 
                required>
            {{#if errors.name}}
                <div class="text-danger">{{errors.name}}</div>
            {{/if}}
        </div>

        <!-- Category Selection -->
        <div class="form-group mb-3">
            <label for="categoryId">Category</label>
            <select class="form-control" id="categoryId" name="categoryId" required>
                <option value="" disabled selected>Select a category</option>
                {{#if categories}}
                    {{#each categories}}
                        <option value="{{id}}" {{#if selected}}{{selected}}{{/if}}>{{name}}</option>
                    {{/each}}
                {{else}}
                    <option disabled>No categories available</option>
                {{/if}}
            </select>
            {{#if errors.categoryId}}
                <div class="text-danger">{{errors.categoryId}}</div>
            {{/if}}
        </div>

        <!-- Price -->
        <div class="form-group mb-3">
            <label for="price">Price ($)</label>
            <input 
                type="number" 
                class="form-control" 
                id="price" 
                name="price" 
                placeholder="Enter the price" 
                step="0.01" 
                min="0" 
                value="{{price}}" 
                required>
            {{#if errors.price}}
                <div class="text-danger">{{errors.price}}</div>
            {{/if}}
        </div>

        <!-- Description -->
        <div class="form-group mb-3">
            <label for="description">Description</label>
            <textarea 
                class="form-control" 
                id="description" 
                name="description" 
                placeholder="Enter a brief description" 
                rows="3" 
                required>{{description}}</textarea>
            {{#if errors.description}}
                <div class="text-danger">{{errors.description}}</div>
            {{/if}}
        </div>

        <!-- Published Status -->
        <div class="form-group mb-3">
            <label for="published">Published</label>
            <select class="form-control" id="published" name="published">
                <option value="true" {{#if published}}selected{{/if}}>Yes</option>
                <option value="false" {{#unless published}}selected{{/unless}}>No</option>
            </select>
        </div>

        <!-- Feature Image -->
        <div class="form-group mb-3">
            <label for="featureImage">Feature Image</label>
            <input 
                type="file" 
                class="form-control-file" 
                id="featureImage" 
                name="featureImage" 
                accept="image/*" 
                required>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Add Item</button>
    </form>
</div>
