<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">{{title}}</h1>

            {{#if categories}}
                <a href="/categories/add" class="btn btn-success float-right">Add Category</a>

                {{#if categories.length}}
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Category ID</th>
                                    <th>Category Name</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each categories}}
                                    <tr>
                                        <td><a href="/items?category={{this.id}}">{{this.id}}</a></td>
                                        <td><a href="/items?category={{this.id}}">{{this.name}}</a></td>
                                        <td>
                                            <!-- Deletion form with POST method -->
                                            <form action="/categories/delete/{{this.id}}" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                            </form>
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                {{else}}
                    <p>No categories available.</p>
                {{/if}}
            {{else}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{/if}}
        </div>
    </div>
</div>
