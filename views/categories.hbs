<div class="row">
    <div class="col-md-12">
        <h2>Categories</h2>
        <hr />
        {{#if categories}}
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                        <tr>
                            <td>{{id}}</td>
                            <td>{{category}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p>{{message}}</p>
        {{/if}}
    </div>
</div>
