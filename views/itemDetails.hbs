<!-- views/itemDetails.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <header>
        <h1>{{title}}</h1>
        <nav>
            <a href="/">Home</a> | 
            <a href="/shop">Shop</a>
        </nav>
    </header>

    <main>
        {{#if item}}
            <h2>{{item.name}}</h2>
            <img src="{{item.featureImage}}" alt="{{item.name}}" />
            <p>{{item.description}}</p>
            <p>Price: ${{item.price}}</p>
            <p>Category: {{item.category}}</p>
        {{else}}
            <p>Item not found.</p>
        {{/if}}
    </main>

    <footer>
        <p>&copy; {{currentYear}}</p>
    </footer>
</body>
</html>
