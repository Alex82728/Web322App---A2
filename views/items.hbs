<div class="col-md-12">
    <h2>{{title}}</h2>
</div>

<!-- Table for displaying items -->
<div class="col-md-12 table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Item ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Price</th>
                <th>Category</th>
                <th>Published</th>
            </tr>
        </thead>
        <tbody>
            {{#unless items}}
                <tr>
                    <td colspan="6" class="text-center">No items available.</td>
                </tr>
            {{/unless}}
            
            {{#each items}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{title}}</td>
                    <td>{{postDate}}</td>
                    <td>{{price}}</td>
                    <td>
                        <a href="/items?category={{category}}">{{category}}</a>
                    </td>
                    <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Conditionally display error message if no posts are found -->
<div class="col-md-12 text-center">
    <strong>{{message}}</strong>
</div>
