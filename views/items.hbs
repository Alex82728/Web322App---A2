<div class="row">
    <div class="col-md-12">
        <h2>Items</h2>
        <hr />

        <!-- Conditionally display the message if there are no items -->
        {{#unless items.length}}
            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>
        {{/unless}}

        <!-- Table for displaying items -->
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Item ID</th>
                        <th>Title</th>
                        <th>Post Date</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each items}}
                        <tr>
                            <td>{{this.id}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.itemDate}}</td> <!-- Assuming itemDate is the post date field -->
                            <td>{{this.price}}</td>
                            <td><a href="/items?category={{this.categoryId}}">{{this.categoryId}}</a></td> <!-- Category Link -->
                            <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
