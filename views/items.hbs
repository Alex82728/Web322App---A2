<table class="table">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
        </tr>
    </thead>
    <tbody>
        {{#each items}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.itemDate}}</td> <!-- Assuming itemDate is the post date field -->
                <td>{{this.price}}</td>
                <td>{{this.category}}</td>
                <td>{{#if this.published}}Yes{{else}}No{{/if}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>
