<!-- Items.hbs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h2>Items List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Published</th>
                <th>Actions</th> <!-- New column for the remove button -->
            </tr>
        </thead>
        <tbody>
            {{#each items}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>{{this.published}}</td>
                <td>
                    <!-- Remove button linking to the delete route -->
                    <a href="/items/delete/{{this.id}}" class="btn btn-danger">Remove</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

</body>
</html>
