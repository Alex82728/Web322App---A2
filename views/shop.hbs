<!-- views/shop.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <header>
        <h1>Shop</h1>
        <nav>
            <a href="/">Home</a> | 
            <a href="/about">About Us</a>
        </nav>
    </header>

    <main>
        <!-- Categories Dropdown -->
        <h2>Categories</h2>
        <ul>
            {{#each data.categories}}
                <li><a href="/shop?category={{this.name}}">{{this.name}}</a></li>
            {{/each}}
        </ul>

        <!-- Items Display -->
        <h2>Items</h2>
        {{#if data.items.length}}
            <ul>
                {{#each data.items}}
                    {{#if this.published}}
                        <li>
                            <a href="/item/{{this.id}}">
                                {{#if this.featureImage}}
                                    <img src="{{this.featureImage}}" alt="{{this.name}}" style="width: 100px; height: auto;" />
                                {{else}}
                                    <img src="default-image.jpg" alt="{{this.name}}" style="width: 100px; height: auto;" />
                                {{/if}}
                                <p>{{this.name}}</p>
                                <p>${{this.price}}</p>
                            </a>
                        </li>
                    {{/if}}
                {{/each}}
            </ul>
        {{else}}
            <p>No items available.</p>
        {{/if}}

        {{#if data.message}}
            <p>{{data.message}}</p>
        {{/if}}

        {{#if data.categoriesMessage}}
            <p>{{data.categoriesMessage}}</p>
        {{/if}}
    </main>

    <footer>
        <p>&copy; {{currentYear}}</p>
    </footer>
</body>
</html>
