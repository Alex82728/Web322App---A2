{{!-- Shop Page --}}
{{> header title="Shop" }}

<div class="container">
    <h1>Shop</h1>

    {{#if data.categories}}
    <ul class="categories">
        {{#each data.categories}}
        <li><a href="/shop?category={{this.category}}">{{this.category}}</a></li>
        {{/each}}
    </ul>
    {{else}}
    <p>No categories available.</p>
    {{/if}}

    {{#if data.items}}
    <div class="items">
        {{#each data.items}}
        <div class="item">
            <img src="{{this.featureImage}}" alt="{{this.title}}">
            <h2>{{this.title}}</h2>
            <p>{{this.description}}</p>
            <a href="/item/{{this.id}}" class="btn btn-primary">View Details</a>
        </div>
        {{/each}}
    </div>
    {{else}}
    <p>{{data.message}}</p>
    {{/if}}
</div>

{{> footer }}
