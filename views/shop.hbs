<div class="row">
  <section class="main col-md-9">
    {{#if data.post}}
      <article>
        <h2>{{data.post.title}}</h2>
        <img src="{{data.post.featureImage}}" alt="Feature Image" style="width:100%" />
        <br /><br />
        <div>{{#safeHTML}}{{data.post.body}}{{/safeHTML}}</div>
        <br /><br />
        <strong>Price:</strong> ${{data.post.price}}<br />
        <strong>Category:</strong> {{data.post.category}}<br />
        <strong>Last Updated:</strong> {{data.post.postDate}}
      </article>
    {{else}}
      <div class="col-md-12 text-center">
        <h2>{{data.message}}</h2>
        <p>Please try another Post / Category</p>
      </div>
    {{/if}}
  </section>

  <aside class="col-md-3">
    {{#if data.posts}}
      <h4>Related Items</h4>
      <ul class="list-group">
        {{#each data.posts}}
          <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">
            {{title}}
          </a>
        {{/each}}
      </ul>
    {{else}}
      <p>No related items available.</p>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item">
            {{category}}
          </a>
        {{/each}}
      </ul>
    {{else}}
      <p>No categories available.</p>
    {{/if}}
  </aside>
</div>
