<!-- views/shop.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
</head>
<body>
    <header>
        <h1>Shop</h1>
        <nav>
            <a href="/">Home</a> | 
            <a href="/about">About Us</a>
        </nav>
    </header>

    <main>
        <!-- Categories Dropdown -->
        <h2>Categories</h2>
        <ul>
            {{#each categories}}
                <li><a href="/shop?category={{this}}">{{this}}</a></li>
            {{/each}}
        </ul>

        <!-- Items Display -->
        <h2>Items</h2>
        {{#if items}}
            <ul>
                {{#each items}}
                    <li>
                        <a href="/item/{{this.id}}">
                            <img src="{{this.featureImage}}" alt="{{this.name}}" />
                            <p>{{this.name}}</p>
                            <p>${{this.price}}</p>
                        </a>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>No items available.</p>
        {{/if}}

        {{#if message}}
            <p>{{message}}</p>
        {{/if}}
    </main>

    <footer>
        <p>&copy; {{currentYear}}</p>
    </footer>
</body>
</html>
